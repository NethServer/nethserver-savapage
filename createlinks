use esmith::Build::CreateLinks  qw(:all);
use File::Path;

#--------------------------------------------------
# actions for nethserver-savapage-update event
#--------------------------------------------------

my $event = "nethserver-savapage-update";

event_templates($event, qw(
                 /etc/papersize
                 /opt/savapage/server/server.properties
));

event_actions($event, qw(
    initialize-default-databases   00
    nethserver-savapage-init       10
    nethserver-savapage-conf       20
    nethserver-savapage-conf-db    30
    nethserver-savapage-sync-users 99
));

event_services($event, qw(
    postgresql reload
    savapage restart
));

# Sucscribe to nethserver-sssd

my $event = "nethserver-sssd-save";

event_actions($event, 'nethserver-savapage-conf-db' => 30);

event_services($event, 'savapage' => 'restart');
